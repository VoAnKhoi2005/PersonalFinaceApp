<UserControl x:Class="PersonalFinanceApp.Src.View.UC_Goalplan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PersonalFinanceApp.Src.View"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:command="clr-namespace:PersonalFinanceApp.ViewModel.Command"
             d:DesignHeight="720" d:DesignWidth="942">
    <Grid>
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Sans Serif Collection"/>
                <Setter Property="Foreground" Value="#E5CBBFBF"/>
                <Setter Property="FontWeight" Value="Regular"/>
            </Style>
        </Grid.Resources>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="22*"></RowDefinition>
                <RowDefinition Height="80"></RowDefinition>
                <RowDefinition Height="189*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <TextBlock Text="Goal plan" 
                               FontSize="28" 
                               FontWeight="Bold"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top" Margin="25,-10,0,0" Height="55"
                               ></TextBlock>
                <TextBlock Text="Create financial goals and manage your savings" 
                               FontSize="14"
                               VerticalAlignment="Bottom"
                               HorizontalAlignment="Left" Margin="26,0,0,-7"
                               ></TextBlock>
                <materialDesign:PackIcon Kind="AccountBadge"
                                         Width="30" Height="30"
                                         Foreground="#E5CBBFBF"
                                         HorizontalAlignment="Right"
                                         VerticalAlignment="Center"
                                         Margin="0,0,20,0"/>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="0.75*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <!--Total target amount-->
                <Grid Grid.Column="0">
                    <Border CornerRadius="20"
                Margin="15,15,7.5,0"
                Background="#053B50">
                        <!--margin-->
                        <Canvas>


                            <materialDesign:PackIcon Kind="CashMultiple"
                                                     Foreground="#E5CBBFBF"
                                                     Height="30"
                                                     Width="30"
                                                     HorizontalAlignment="Left"
                                                     VerticalAlignment="Center"
                                                     Canvas.Top="10" Canvas.Left="10"/>
                            <TextBlock Text="Total target amount"
                                       FontSize="12"
                                       Canvas.Top="35"
                                       Canvas.Left="18"></TextBlock>

                            <!--Binding money here-->
                            <TextBlock></TextBlock>


                        </Canvas>
                    </Border>
                </Grid>

                <!--Left to save-->
                <Grid Grid.Column="1">
                    <Border CornerRadius="20"
                        Margin="15,15,7.5,0"
                        Background="#053B50">
                        <Canvas>


                            <materialDesign:PackIcon Kind="HandCoin" 
                                                    Foreground="#E5CBBFBF"
                                                     Height="30"
                                                     Width="30"
                                                     HorizontalAlignment="Left"
                                                     VerticalAlignment="Center"
                                                     Canvas.Top="10" Canvas.Left="10"/>
                            <TextBlock Text="Left to save"
                                       FontSize="12"
                                       Canvas.Top="35"
                                       Canvas.Left="50"></TextBlock>

                            <!--Binding money here-->
                            <TextBlock></TextBlock>


                        </Canvas>
                    </Border>
                </Grid>


                <!--Monthly savings target-->
                <Grid Grid.Column="2">
                    <Border CornerRadius="20"
                        Margin="15,15,7.5,0"    
                        Background="#053B50">
                        <Canvas>


                            <materialDesign:PackIcon Kind="BullseyeArrow" 
                                                     Foreground="#E5CBBFBF"
                                                     Height="30"
                                                     Width="30"
                                                     HorizontalAlignment="Left"
                                                     VerticalAlignment="Center"
                                                     Canvas.Top="10" Canvas.Left="10"/>
                            <TextBlock Text="monthly savings target"
                                       FontSize="12"
                                       Canvas.Top="35"
                                       Canvas.Left="8"></TextBlock>

                            <!--Binding money here-->
                            <TextBlock></TextBlock>
                        </Canvas>
                    </Border>
                </Grid>

                <!--Save so far-->
                <Grid Grid.Column="3">
                    <Border CornerRadius="20"
                        Margin="15,15,7.5,0"
                        Background="#053B50">
                        <Canvas>
                            <materialDesign:PackIcon Kind="CreditCardFast"
                                                    Foreground="#E5CBBFBF"
                                                     Height="30"
                                                     Width="30"
                                                     HorizontalAlignment="Left"
                                                     VerticalAlignment="Center"
                                                     Canvas.Top="10" Canvas.Left="10"/>
                            <TextBlock Text="save so far"
                                       FontSize="12"
                                       Canvas.Top="35"
                                       Canvas.Left="50"></TextBlock>

                            <!--Binding money here-->
                            <TextBlock></TextBlock>
                        </Canvas>
                    </Border>
                </Grid>
                <Grid Grid.Column="5">
                    <Button Height="50"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Margin="0,0,15,10">

                        <Button.Template>
                            <ControlTemplate>
                                <Border CornerRadius="20"
                                        Width="100"
                                        Height="50"
                                        Background="#053B50">
                                    <Grid>
                                        <TextBlock Text="new goal"
                                               FontSize="12"
                                               Margin="0,0,10,0"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Right"></TextBlock>
                                        <materialDesign:PackIcon Kind="PlusCircle" 
                                                                    Foreground="#E5CBBFBF"
                                                                    Height="25"
                                                                    Width="25"
                                                                    HorizontalAlignment="Left"
                                                                    VerticalAlignment="Center"
                                                                 Margin="5,0,0,0"/>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

            </Grid>
                <!--goal plan main looking-->
            <WrapPanel Grid.Row="2">
                <Button Content="Test" Command="{x:Static command:TestCommand.Instance}"/>
            </WrapPanel>
        </Grid>
    </Grid>
</UserControl>
