<Window x:Class="PersonalFinanceApp.Src.View.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonalFinanceApp.Src.View"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="TestWindow" Height="720" Width="942">
    <Border Background="#053B50" CornerRadius="30"
            Width="450" Height="600 ">
        <Border.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Sans Serif Collection"/>
                <Setter Property="Foreground" Value="#E5CBBFBF"/>
                <Setter Property="FontWeight" Value="Regular"/>
                <Setter Property="FontSize" Value="16"></Setter>
            </Style>
            <Style TargetType="Button">
                <Setter Property="Background" Value="Transparent"></Setter>
                <Setter Property="Foreground" Value="Transparent"></Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="true">
                        <Setter Property="Foreground" Value="Black"></Setter>
                        <Setter Property="Cursor" Value="Hand"></Setter>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Border.Resources>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <!--overall-->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                
                <!--chart-->
                <Grid Grid.Column="0">
                    <TextBlock Text=" chart here" VerticalAlignment="Center"
                               HorizontalAlignment="Center"></TextBlock>
                </Grid>
                
                
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <!--icon-->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <ToggleButton Grid.Column="0"
                                      Width="35"
                                      Height="35"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"
                                        Content="{materialDesign:PackIcon Kind=Heart,                                                         Size=21}"
                                        IsEnabled="True"
                                        Style="{StaticResource MaterialDesignFlatPrimaryToggleButton}"
                                        ToolTip="MaterialDesignFlatPrimaryToggleButton" Background="#FFE5A78E" Foreground="#FFF14242" />
                        <!--Notification-->
                        <Button Grid.Column="1">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"></Setter>
                                    <Setter Property="Foreground" Value="{DynamicResource CommonText}"></Setter>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate>
                                                <Border>
                                                    <materialDesign:PackIcon Kind="Bell"
                                                                             Width="30"
                                                                             Height="30"
                                                                             VerticalAlignment="Center"
                                                                             HorizontalAlignment="Left"></materialDesign:PackIcon>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="true">
                                            <Setter Property="Cursor" Value="Hand"></Setter>
                                            <Setter Property="Foreground" Value="#FFF6E8A1"></Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <!--Add money to goal-->
                        <Button Grid.Column="2">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"></Setter>
                                    <Setter Property="Foreground" Value="{DynamicResource CommonText}"></Setter>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate>
                                                <Border>
                                                    <materialDesign:PackIcon Kind="PlusMinusVariant"
                                             Width="30"
                                             Height="30"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Left"
                                             />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="true">
                                            <Setter Property="Cursor" Value="Hand"></Setter>
                                            <Setter Property="Foreground" Value="#FFF6E8A1"></Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <!--adjust goal-->
                        <Button Grid.Column="3">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"></Setter>
                                    <Setter Property="Foreground" Value="{DynamicResource CommonText}"></Setter>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate>
                                                <Border>
                                                    <materialDesign:PackIcon Kind="Pencil"
                                             Width="30"
                                            Height="30"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"></materialDesign:PackIcon>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="true">
                                            <Setter Property="Cursor" Value="Hand"></Setter>
                                            <Setter Property="Foreground" Value="#FFF6E8A1"></Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <!--history-->
                        <Button Grid.Column="4">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"></Setter>
                                    <Setter Property="Foreground" Value="{DynamicResource CommonText}"></Setter>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate>
                                                <Border>
                                                    <materialDesign:PackIcon Kind="ClipboardTextClock"  
                                             Width="30"
                                            Height="30"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"></materialDesign:PackIcon>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="true">
                                            <Setter Property="Cursor" Value="Hand"></Setter>
                                            <Setter Property="Foreground" Value="#FFF6E8A1"></Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <!--delete-->
                        <Button Grid.Column="5">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"></Setter>
                                    <Setter Property="Foreground" Value="#FFE35D5D"></Setter>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate>
                                                <Border>
                                                    <materialDesign:PackIcon Kind="Delete"                                             Width="30"
                                            Height="30"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"></materialDesign:PackIcon>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="true">
                                            <Setter Property="Cursor" Value="Hand"></Setter>
                                            <Setter Property="Foreground" Value="#FFF42B2B"></Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>

                    <Grid Grid.Row="1">
                        <TextBlock Text="Category :" VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   FontWeight="DemiBold"
                                   FontSize="16"></TextBlock>
                        <!--binding here-->
                        <TextBlock Text="something here" VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,5,0"
                                   FontSize="14"></TextBlock>
                    </Grid>

                    <!--name-->
                    <!--binding name here-->
                    <TextBlock Grid.Row="2" FontWeight="Bold"
                        Text="Kiem tien an tet 3" VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               FontSize="20">
                    </TextBlock>


                    <!--progress money-->

                    <Grid Grid.Row="3">
                        <TextBlock Text="VND" HorizontalAlignment="Left" Margin="2,0,0,0"
                                   FontSize="14" Opacity="0.4"
                                   ></TextBlock>

                        <!--binding here-->
                        <TextBlock Text="123456789 / 987654321" HorizontalAlignment="Right"
                                   Margin="0,0,5,0"
                                   VerticalAlignment="Center"
                                   FontSize="14" Opacity="0.6"></TextBlock>
                    </Grid>
                    <Grid Grid.Row="4">
                        <TextBlock Text="Status :" VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   FontWeight="DemiBold"
                                   FontSize="16"></TextBlock>
                        <!--binding here-->
                        <TextBlock Text="not finished yet" Foreground="Red"
                                   FontWeight="DemiBold"
                                   FontSize="14"
                                   HorizontalAlignment="Right" Margin="0,0,5,0"></TextBlock>
                    </Grid>
                </Grid>
            </Grid>
            
            <!--Detail section-->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <TextBlock Text="Amount (VND)  : " VerticalAlignment="Center"
                               HorizontalAlignment="Left" Margin="50,0,0,0"></TextBlock>

                    <!--binding here-->
                    <TextBlock Text="123456789" VerticalAlignment="Center"
                               HorizontalAlignment="Right" Margin="0,0,30,0"
                               FontWeight="Bold"></TextBlock>
                </Grid>
                <Grid Grid.Row="1">
                    <TextBlock Text="Start date  : " VerticalAlignment="Center"
                               HorizontalAlignment="Left" Margin="50,0,0,0"></TextBlock>

                    <!--binding here-->
                    <TextBlock Text="1/1/1999" VerticalAlignment="Center"
                               HorizontalAlignment="Right" Margin="0,0,30,0"
                               FontWeight="Bold"></TextBlock>
                </Grid>
                <Grid Grid.Row="2">
                    <TextBlock Text="End date  : " VerticalAlignment="Center"
                               HorizontalAlignment="Left" Margin="50,0,0,0"
                               ></TextBlock>

                    <!--binding here-->
                    <TextBlock Text="9/9/2000" VerticalAlignment="Center"
                               HorizontalAlignment="Right" Margin="0,0,30,0"
                               FontWeight="Bold"></TextBlock>
                </Grid>
                <Grid Grid.Row="3">
                    <TextBlock Text="Time to reach your goal  : " VerticalAlignment="Center"
                               HorizontalAlignment="Left" Margin="50,0,0,0"
                               ></TextBlock>

                    <!--binding here-->
                    <TextBlock Text="end - start (days)" VerticalAlignment="Center"
                               HorizontalAlignment="Right" Margin="0,0,30,0"
                               FontWeight="Bold"></TextBlock>
                </Grid>
            </Grid>
            
            <!--decription-->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="21*"></RowDefinition>
                    <RowDefinition Height="79*"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Text="Description  :" VerticalAlignment="Center"
                           Grid.Row="0"
                           HorizontalAlignment="Left" Margin="50,0,0,0"></TextBlock>

                <!--binding here-->
                <TextBlock TextWrapping="Wrap"></TextBlock>
            </Grid>
        </Grid>
    </Border>
</Window>
