<Window x:Class="PersonalFinanceApp.Src.View.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonalFinanceApp.Src.View"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="TestWindow" Height="720" Width="942">
    <Border Background="#053B50" Height="500" Width="400" CornerRadius="30">
        <Grid >
            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="FontFamily" Value="Sans Serif Collection"/>
                    <Setter Property="Foreground" Value="#E5CBBFBF"/>
                    <Setter Property="FontWeight" Value="Regular"/>
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.9*"></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <!--title-->
            <Grid Grid.Row="0">
                <TextBlock Text="Adding  a  new  goal"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="25"
                           Foreground="#EFE4E4"
                           FontWeight="Bold"
                           
                           Margin="0,-5,0,0" TextAlignment="Center"></TextBlock>
                <TextBlock Text="please  fill  in  the  form  below"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"></TextBlock>
            </Grid>

            <!--Goal name-->
            <Grid Grid.Row="1">
                <TextBox
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Margin="10,0,0,0"
                    materialDesign:HintAssist.Hint="Goal name"
                    materialDesign:HintAssist.Foreground="#E5CBBFBF"
                    FontSize="18"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" Height="40" 
                    Width="380" Foreground="#E5CBBFBF"/>
            </Grid>

            <!--Target amount-->
            <Grid Grid.Row="2">
                <TextBox
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Margin="10,0,0,0"
                    materialDesign:HintAssist.Foreground="#E5CBBFBF"
                    FontSize="18"
                    materialDesign:HintAssist.Hint="Target amount"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" Height="40" 
                    Width="380" Foreground="#E5CBBFBF"/>
            </Grid>

            <!--Monthly Target amount-->
            <Grid Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="13*"/>
                </Grid.RowDefinitions>
                <TextBox
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    Margin="0,16,0,0"
                    materialDesign:HintAssist.Hint="Monthly target amount"
                    materialDesign:HintAssist.Foreground="#E5CBBFBF"
                    FontSize="18"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" Height="40" 
                    Width="380" Foreground="#E5CBBFBF" Grid.RowSpan="2"/>
            </Grid>

            <!--Start date - end date-->
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <DatePicker
                    Width="175"
                    Height="40" 
                    materialDesign:HintAssist.Hint="Start date"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Foreground="#E5CBBFBF"
                    HorizontalAlignment="Left"
                        materialDesign:HintAssist.Foreground="#E5CBBFBF"
                    FontSize="18"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"/>
                </Grid>
                <Grid Grid.Column="1">
                    <DatePicker
                    Width="178"
                    Height="40" 
                    materialDesign:HintAssist.Hint="End date"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Foreground="#E5CBBFBF"
                    HorizontalAlignment="Left"
                        
                        materialDesign:HintAssist.Foreground="#E5CBBFBF"
                    FontSize="18"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"/>
                </Grid>
            </Grid>

            <!--cancel - confirm -->
            <Grid Grid.Row="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" CornerRadius="25" Height="50"
                        Width="150"
                        Margin="0,0,0,10" Background="#FFC8386C" >
                    <Button>
                        
                    <TextBlock Text="Cancel" Foreground="White"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   FontSize="16"></TextBlock>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"></Setter>
                                <Setter Property="Foreground" Value="#E5CBBFBF"></Setter>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border CornerRadius="30"
                                    Background="{TemplateBinding Background}"
                                    >
                                                <ContentPresenter HorizontalAlignment="Stretch"
                                                  VerticalAlignment="Stretch"></ContentPresenter>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="true">
                                        <Setter Property="Cursor" Value="Hand"></Setter>
                                        <Setter Property="Background" Value="#FFFF2222" ></Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                </Border>
                <Border Grid.Column="1" CornerRadius="30" Height="50"
                        Width="150"
                         Background="#FF61D2BE" >
                    <Button>
                        <TextBlock Text="Confirm" Foreground="White"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   FontSize="16">
                        </TextBlock>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"></Setter>
                                <Setter Property="Foreground" Value="#E5CBBFBF"></Setter>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border CornerRadius="30"
                                    Background="{TemplateBinding Background}"
                                    >
                                                <ContentPresenter HorizontalAlignment="Stretch"
                                                  VerticalAlignment="Stretch"></ContentPresenter>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="true">
                                        <Setter Property="Cursor" Value="Hand"></Setter>
                                        <Setter Property="Background" Value="#FF31FFC4" ></Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
