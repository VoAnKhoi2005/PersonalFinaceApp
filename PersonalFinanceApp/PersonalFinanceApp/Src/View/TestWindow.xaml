<Window x:Class="PersonalFinanceApp.Src.View.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonalFinanceApp.Src.View"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Background="Transparent"
        Title="TestWindow" Height="720" Width="942">
    <Border Background="#053B50" CornerRadius="30"
            Width="450" Height="600">
        <Border.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Sans Serif Collection"/>
                <Setter Property="Foreground" Value="{DynamicResource CommonText}"/>
                <Setter Property="FontWeight" Value="Regular"/>
                <Setter Property="FontSize" Value="16"></Setter>
            </Style>
            <Style TargetType="Button">
                <Setter Property="Background" Value="Transparent"></Setter>
                <Setter Property="Foreground" Value="Transparent"></Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="true">
                        <Setter Property="Cursor" Value="Hand"></Setter>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Border.Resources>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <!--overall-->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"></ColumnDefinition>
                    <ColumnDefinition Width="5*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <!--chart-->
                <Grid Grid.Column="0">
                    <TextBlock Text=" chart here" VerticalAlignment="Center"
                               HorizontalAlignment="Center"></TextBlock>
                </Grid>


                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <!--icon-->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <!--Add money to goal-->
                        <Button Grid.Column="2" 
                                Command="{Binding AddNewAmountGoalCommand}"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Left">
                            <!--
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding SaveIDGoalCard}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            -->
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"></Setter>
                                    <Setter Property="Foreground" Value="{DynamicResource CommonText}"></Setter>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate>
                                                <Border Background="{TemplateBinding Background}">
                                                    <materialDesign:PackIcon Kind="PlusMinusVariant"
                                             Width="30"
                                             Height="30"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Left"
                                             />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="true">
                                            <Setter Property="Cursor" Value="Hand"></Setter>
                                            <Setter Property="Foreground" Value="{DynamicResource Goalplan_Hover}"></Setter>

                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <!--adjust goal-->
                        <Button Grid.Column="3" 
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Left" 
                                Command="{Binding EditGoalCommand}" 
                                CommandParameter="{Binding}">
                            <!--
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding SaveIDGoalCard}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            -->
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"></Setter>
                                    <Setter Property="Foreground" Value="{DynamicResource CommonText}"></Setter>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate>
                                                <Border Background="{TemplateBinding Background}">
                                                    <materialDesign:PackIcon Kind="Pencil"
                                             Width="30"
                                            Height="30"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"></materialDesign:PackIcon>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="true">
                                            <Setter Property="Cursor" Value="Hand"></Setter>
                                            <Setter Property="Foreground" Value="{DynamicResource Goalplan_Hover}"></Setter>

                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <!--history-->
                        <Button Grid.Column="4" Command="{Binding HistoryGoalCommand}"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Left">
                            <!--
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding SaveIDGoalCard}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            -->
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"></Setter>
                                    <Setter Property="Foreground" Value="{DynamicResource CommonText}"></Setter>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate>
                                                <Border Background="{TemplateBinding Background}">
                                                    <materialDesign:PackIcon Kind="ClipboardTextClock"  
                                             Width="30"
                                            Height="30"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"></materialDesign:PackIcon>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="true">
                                            <Setter Property="Cursor" Value="Hand"></Setter>
                                            <Setter Property="Foreground" Value="{DynamicResource Goalplan_Hover}"></Setter>

                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <!--delete-->
                        <Button Grid.Column="5" Command="{Binding DeleteGoalCommand}"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Left">
                            <!--
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding SaveIDGoalCard}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            -->
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"></Setter>
                                    <Setter Property="Foreground" Value="#FFE35D5D"></Setter>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate>
                                                <Border Background="{TemplateBinding Background}">
                                                    <materialDesign:PackIcon Kind="Delete"                                             Width="30"
                                            Height="30"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"></materialDesign:PackIcon>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="true">
                                            <Setter Property="Cursor" Value="Hand"></Setter>
                                            <Setter Property="Foreground" Value="#FFF42B2B"></Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>

                    <Grid Grid.Row="1">
                        <TextBlock Text="Category :" VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   FontWeight="DemiBold"
                                   FontSize="16"></TextBlock>
                        <!--binding here-->
                        <TextBlock Text="{Binding CategoryGoalCard}" VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,30,0"
                                   FontSize="14"></TextBlock>
                    </Grid>

                    <!--name-->
                    <!--binding name here-->
                    <TextBlock Grid.Row="2" FontWeight="Bold"
                        Text="{Binding NameGoalCard}" VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               FontSize="20">
                    </TextBlock>


                    <!--progress money-->

                    <Grid Grid.Row="3">
                        <TextBlock Text="Status :" VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   FontWeight="DemiBold"
                                   FontSize="16"></TextBlock>
                        <!--binding here-->
                        <TextBlock Text="{Binding StatusGoalCard}" 
                                   FontWeight="DemiBold"
                                   FontSize="16"
                                   HorizontalAlignment="Right" Margin="0,0,75,0"></TextBlock>
                    </Grid>
                </Grid>
            </Grid>

            <!--Detail section-->

            <!--decription-->
            <Expander Grid.Row="1" Header="Description"
                      Width="auto"
                      >
                <Expander.Style>
                    <Style TargetType="Expander">
                        <Setter Property="Template" >
                            <Setter.Value>
                                <ControlTemplate TargetType="Expander">
                                    <materialDesign:PackIcon Kind="PlusMinusVariant"
Width="30"
Height="30"
VerticalAlignment="Center"
HorizontalAlignment="Left"
/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Expander.Style>
                <!--binding here-->
                <DockPanel  Height="300">
                    <TextBlock Text="ahihi" DockPanel.Dock="top"></TextBlock>
                    <TextBlock Text="ahihi" DockPanel.Dock="top"></TextBlock>
                    <TextBlock Text="ahihi" DockPanel.Dock="top"></TextBlock>
                    <TextBlock Text="ahihi" DockPanel.Dock="top"></TextBlock>
                    <TextBlock Text="ahihi" DockPanel.Dock="top"></TextBlock>
                    <TextBlock 
                           HorizontalAlignment="Left" Margin="30,0,0,0"
                           Text="{Binding DescriptionGoalCard}"
                           TextWrapping="Wrap"></TextBlock>
                </DockPanel>
            </Expander>
        </Grid>
    </Border>

</Window>
