<UserControl x:Class="PersonalFinanceApp.Src.View.MainMenu.Recurring.Recurring_MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                          xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:PersonalFinanceApp.Src.View.MainMenu.Recurring"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="1000">
    <Grid>
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Sans Serif Collection" />
                <Setter Property="Foreground" Value="{DynamicResource CommonText}" />
                <Setter Property="FontWeight" Value="Regular" />
            </Style>
            <Style TargetType="Button">
                <Setter Property="Background" Value="Transparent"></Setter>
                <Setter Property="Foreground" Value="{DynamicResource CommonText}"></Setter>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="20"
                                   Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Stretch"
                                                 VerticalAlignment="Stretch">
                                </ContentPresenter>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="true">
                        <Setter Property="Cursor" Value="Hand"></Setter>
                        <Setter Property="Background" Value="{DynamicResource onHovered}"></Setter>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="132*"></ColumnDefinition>
                <ColumnDefinition Width="25*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="48*"></RowDefinition>
                    <RowDefinition Height="19*"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Text="Recurring"
                               FontSize="28"
                               FontWeight="Bold"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Bottom" Margin="25,0,0,17"
                               Height="55" Width="202"
                               Grid.Row="0" Grid.RowSpan="2">
                </TextBlock>
                <TextBlock Text=""
                               FontSize="14"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left" Margin="26,0,0,0"
                               Height="37" Width="399"
                               Grid.Row="1">
                </TextBlock>
            </Grid>

            <!--user-->
            <DockPanel Grid.Column="1">
                <Button Width="34" Height="36"
                        VerticalAlignment="Center"
                            DockPanel.Dock="Right"
                        HorizontalAlignment="Right"
                            Margin="0 0 15 0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"></Setter>
                            <Setter Property="Foreground" Value="{DynamicResource CommonText}"></Setter>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="32" Height="32" Background="Transparent">
                                            <materialDesign:PackIcon 
                                                Foreground="{TemplateBinding Foreground}"
                                                    Kind="AccountBadge"
                                                    Width="30" Height="30"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                         />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="true">
                                    <Setter Property="Cursor" Value="Hand"></Setter>
                                    <Setter Property="Foreground"  Value="{DynamicResource onHovered}" ></Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Width="34" Height="36"
                        VerticalAlignment="Center"
                            DockPanel.Dock="Right"
                        HorizontalAlignment="Right"
                            Margin="0 0 5 0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"></Setter>
                            <Setter Property="Foreground" Value="{DynamicResource CommonText}"></Setter>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="32" Height="32" Background="Transparent">
                                            <materialDesign:PackIcon Kind="Bell" 
                                                                         Foreground="{TemplateBinding Foreground}"
                                                                            Width="28" Height="28"
                                                                        VerticalAlignment="Center"
                                                                        HorizontalAlignment="Center"
                                         />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="true">
                                    <Setter Property="Cursor" Value="Hand"></Setter>
                                    <Setter Property="Foreground"  Value="{DynamicResource onHovered}" ></Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </DockPanel>


        </Grid>
        <DockPanel Grid.Row="1">

            <Border CornerRadius="20"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Width="100"
                        Height="40"
                        Margin="5,0,15,0"
                        Background="{DynamicResource CommonGridBackground}"
                        DockPanel.Dock="Right">
                <Button Command="{Binding AddNewGoalCommand}">
                    <Grid>
                        <TextBlock Text=" Recurring"

                                       FontSize="12"
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       FontWeight="Normal"
                                       Foreground="{DynamicResource CommonText}">
                        </TextBlock>
                        <materialDesign:PackIcon Kind="PlusCircle"
                                                     Foreground="{DynamicResource CommonText}"
                                                     Height="25"
                                                     Width="25"
                                                     HorizontalAlignment="Left"
                                                     VerticalAlignment="Center"
                                                     Margin="5,0,0,0" />
                    </Grid>
                </Button>
            </Border>
            <Border CornerRadius="30"
                    Background="{DynamicResource CommonGridBackground}"
                    Width="40" Height="40"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                        DockPanel.Dock="Right"
                    >
                <Button Command="{Binding RefreshGoalCommand}">
                    <materialDesign:PackIcon Kind="Refresh" 
                    Foreground="{DynamicResource CommonText}"
                                                 Height="25"
                                                 Width="25"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"
                                                  />
                </Button>
            </Border>

            <!--add new-->

        </DockPanel>
        <!--DataGrid expensebook-->
        <Grid Grid.Row="2"  Margin="15 0 15 0">
            <DataGrid></DataGrid>
        </Grid>

    </Grid>
</UserControl>
