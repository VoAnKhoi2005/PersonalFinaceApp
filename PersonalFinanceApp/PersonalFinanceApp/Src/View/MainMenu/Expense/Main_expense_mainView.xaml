<UserControl x:Class="PersonalFinanceApp.Src.View.MainMenu.Expense.Main_expense_mainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PersonalFinanceApp.Src.View.MainMenu.Expense"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1000">
    <Grid>
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Sans Serif Collection" />
                <Setter Property="Foreground" Value="{DynamicResource CommonText}" />
                <Setter Property="FontWeight" Value="Regular" />
            </Style>
            <Style TargetType="Button">
                <Setter Property="Background" Value="Transparent"></Setter>
                <Setter Property="Foreground" Value="{DynamicResource CommonText}"></Setter>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="30"
                                   Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Stretch"
                                                 VerticalAlignment="Stretch">
                                </ContentPresenter>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="true">
                        <Setter Property="Cursor" Value="Hand"></Setter>
                        <Setter Property="Background" Value="{DynamicResource onHovered}"></Setter>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="817*"></ColumnDefinition>
                <ColumnDefinition Width="183*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <TextBlock Text="Name here"
                          FontSize="28"
                          FontWeight="Bold"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center"  
                           Margin="18,0,0,0" 
                          Grid.Row="0">
                </TextBlock>
            </Grid>
            <DockPanel Grid.Column="1">
                <Button Width="34" Height="36"
                        VerticalAlignment="Center"
                            DockPanel.Dock="Right"
                        HorizontalAlignment="Right"
                            Margin="0 0 15 0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"></Setter>
                            <Setter Property="Foreground" Value="{DynamicResource CommonText}"></Setter>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="32" Height="32" Background="Transparent">
                                            <materialDesign:PackIcon 
                                                Foreground="{TemplateBinding Foreground}"
                                                    Kind="AccountBadge"
                                                    Width="30" Height="30"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                         />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="true">
                                    <Setter Property="Cursor" Value="Hand"></Setter>
                                    <Setter Property="Foreground"  Value="{DynamicResource onHovered}" ></Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Width="34" Height="36"
                        VerticalAlignment="Center"
                            DockPanel.Dock="Right"
                        HorizontalAlignment="Right"
                            Margin="0 0 5 0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"></Setter>
                            <Setter Property="Foreground" Value="{DynamicResource CommonText}"></Setter>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="32" Height="32" Background="Transparent">
                                            <materialDesign:PackIcon Kind="Bell" 
                                                                         Foreground="{TemplateBinding Foreground}"
                                                                            Width="28" Height="28"
                                                                        VerticalAlignment="Center"
                                                                        HorizontalAlignment="Center"
                                         />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="true">
                                    <Setter Property="Cursor" Value="Hand"></Setter>
                                    <Setter Property="Foreground"  Value="{DynamicResource onHovered}" ></Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </DockPanel>


        </Grid>
        <DockPanel Grid.Row="1">
            <!--add new-->
            <Border CornerRadius="20"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Width="100"
                       Height="40"
                       Background="{DynamicResource CommonGridBackground}"
                   DockPanel.Dock="Right"
                   Margin="0,0,15,0">
                <Button Command="{Binding AddNewExpenseBookCommand}">
                    <Grid>
                        <TextBlock Text="New expense"
                                  FontSize="10"
                                  Margin="0,0,5,0"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Right"
                                  FontWeight="Normal"
                                  Foreground="{DynamicResource CommonText}">
                        </TextBlock>
                        <materialDesign:PackIcon Kind="PlusCircle"
                                                Foreground="{DynamicResource CommonText}"
                                                Height="25"
                                                Width="25"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Margin="5,0,0,0" />
                    </Grid>
                </Button>
            </Border>
            <Border CornerRadius="30"
                   Background="{DynamicResource CommonGridBackground}"
                   Width="40" Height="40"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Margin="0,0,5,0"
                   DockPanel.Dock="Right">
                <Button Command="{Binding RefreshExpenseBookCommand}">
                    <materialDesign:PackIcon Kind="Refresh" 
                   Foreground="{DynamicResource CommonText}"
                                                Height="25"
                                                Width="25"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                 />
                </Button>
            </Border>

            <Border CornerRadius="30"
                   Background="{DynamicResource CommonGridBackground}"
                   Width="40" Height="40"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Margin="0,0,5,0"
                   DockPanel.Dock="Right">
                <Button Command="{Binding RefreshExpenseBookCommand}">
                    <materialDesign:PackIcon Kind="Delete"
                   Foreground="Red"
                                                Height="25"
                                                Width="25"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                 />
                </Button>
            </Border>

            <Border CornerRadius="20"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Width="80"
                       Height="40"
                       Background="{DynamicResource CommonGridBackground}"
                   DockPanel.Dock="Left"
                   Margin="15,0,0,0">
                <Button Command="{Binding AddNewExpenseBookCommand}">
                    <Grid>
                        <TextBlock Text="Filter"
                                  FontSize="14"
                                   Margin="10 0 0 0"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Left"
                                  FontWeight="Normal"
                                  Foreground="{DynamicResource CommonText}">
                        </TextBlock>
                        <materialDesign:PackIcon Kind="FilterVariant" 
                        Foreground="{DynamicResource CommonText}"
                                                Height="22"
                                                Width="22"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Margin="0,0,5,0" />
                    </Grid>
                </Button>
            </Border>
        </DockPanel>
        <!--DataGrid expensebook-->

        <Grid Grid.Row="2" Margin="15 0 15 15">
            <DataGrid></DataGrid>
        </Grid>
    </Grid>
</UserControl>
