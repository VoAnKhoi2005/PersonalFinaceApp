<UserControl x:Class="PersonalFinanceApp.Src.View.Main_expense_mainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PersonalFinanceApp.Src.View"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             xmlns:convert="clr-namespace:PersonalFinanceApp.Src.etc"
             d:DesignHeight="720" d:DesignWidth="942"
             x:Name="Expense">
    <UserControl.Resources>
        <convert:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Sans Serif Collection" />
                <Setter Property="Foreground" Value="{DynamicResource CommonText}" />
                <Setter Property="FontWeight" Value="Regular" />
            </Style>
            <Style TargetType="Button">
                <Setter Property="Background" Value="Transparent"></Setter>
                <Setter Property="Foreground" Value="{DynamicResource CommonText}"></Setter>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="20"
                                   Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Stretch"
                                                 VerticalAlignment="Stretch">
                                </ContentPresenter>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="true">
                        <Setter Property="Cursor" Value="Hand"></Setter>
                        <Setter Property="Background" Value="{DynamicResource onHovered}"></Setter>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="132*"></ColumnDefinition>
                <ColumnDefinition Width="25*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="48*"></RowDefinition>
                    <RowDefinition Height="19*"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Text="Expense book"
                               FontSize="28"
                               FontWeight="Bold"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Bottom" Margin="25,0,0,17"
                               Height="55" Width="309"
                               Grid.Row="0" Grid.RowSpan="2">
                </TextBlock>
                <TextBlock Text="Overview of your activities"
                               FontSize="14"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left" Margin="26,0,0,0"
                               Height="37" Width="303"
                               Grid.Row="1">
                </TextBlock>
            </Grid>

            <!--user-->
            <DockPanel Grid.Column="1">
                <Button Width="34" Height="36"
                        VerticalAlignment="Center"
                            DockPanel.Dock="Right"
                        HorizontalAlignment="Right"
                            Margin="0 0 15 0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"></Setter>
                            <Setter Property="Foreground" Value="{DynamicResource CommonText}"></Setter>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="32" Height="32" Background="Transparent">
                                            <materialDesign:PackIcon 
                                                Foreground="{TemplateBinding Foreground}"
                                                    Kind="AccountBadge"
                                                    Width="30" Height="30"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                         />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="true">
                                    <Setter Property="Cursor" Value="Hand"></Setter>
                                    <Setter Property="Foreground"  Value="{DynamicResource onHovered}" ></Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Width="34" Height="36"
                        VerticalAlignment="Center"
                            DockPanel.Dock="Right"
                        HorizontalAlignment="Right"
                            Margin="0 0 5 0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"></Setter>
                            <Setter Property="Foreground" Value="{DynamicResource CommonText}"></Setter>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="32" Height="32" Background="Transparent">
                                            <materialDesign:PackIcon Kind="Bell" 
                                                                         Foreground="{TemplateBinding Foreground}"
                                                                            Width="28" Height="28"
                                                                        VerticalAlignment="Center"
                                                                        HorizontalAlignment="Center"
                                         />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="true">
                                    <Setter Property="Cursor" Value="Hand"></Setter>
                                    <Setter Property="Foreground"  Value="{DynamicResource onHovered}" ></Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </DockPanel>


        </Grid>
        <DockPanel Grid.Row="1">
            <!--add new-->
            <Border CornerRadius="20"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Width="100"
                       Height="40"
                       Background="{DynamicResource CommonGridBackground}"
                   DockPanel.Dock="Right"
                   Margin="0,0,15,0">
                <Button Command="{Binding AddNewExpenseCommand}">
                    <Grid>
                        <TextBlock Text="New expense"
                                  FontSize="10"
                                  Margin="0,0,5,0"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Right"
                                  FontWeight="Normal"
                                  Foreground="{DynamicResource CommonText}">
                        </TextBlock>
                        <materialDesign:PackIcon Kind="PlusCircle"
                                                Foreground="{DynamicResource CommonText}"
                                                Height="25"
                                                Width="25"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Margin="5,0,0,0" />
                    </Grid>
                </Button>
            </Border>
            <Border CornerRadius="30"
                   Background="{DynamicResource CommonGridBackground}"
                   Width="40" Height="40"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Margin="0,0,5,0"
                   DockPanel.Dock="Right">
                <Button Command="{Binding RefreshExpenseCommand}">
                    <materialDesign:PackIcon Kind="Refresh" 
                   Foreground="{DynamicResource CommonText}"
                                                Height="25"
                                                Width="25"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                 />
                </Button>
            </Border>

            <Border CornerRadius="30"
                   Background="{DynamicResource CommonGridBackground}"
                   Width="40" Height="40"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Margin="0,0,5,0"
                   DockPanel.Dock="Right">
                <Button Command="{Binding LoadRecoverCommand}">
                    <materialDesign:PackIcon Kind="Delete"
                   Foreground="Red"
                                                Height="25"
                                                Width="25"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                 />
                </Button>
            </Border>

            <Border CornerRadius="20"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Width="80"
                       Height="40"
                       Background="{DynamicResource CommonGridBackground}"
                   DockPanel.Dock="Left"
                   Margin="15,0,0,0">
                <Button Command="{Binding FilterExpenseCommand}">
                    <Grid>
                        <TextBlock Text="Filter"
                                  FontSize="14"
                                   Margin="10 0 0 0"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Left"
                                  FontWeight="Normal"
                                  Foreground="{DynamicResource CommonText}">
                        </TextBlock>
                        <materialDesign:PackIcon Kind="FilterVariant" 
                        Foreground="{DynamicResource CommonText}"
                                                Height="22"
                                                Width="22"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Margin="0,0,5,0" />
                    </Grid>
                </Button>
            </Border>
        </DockPanel>
        <!--DataGrid expensebook-->
        <Grid Grid.Row="2" >
            <DataGrid 
                   Visibility="{Binding IsButtonVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                   Margin="15,0,15,15"
                   Name="ListExpenseBook"
                   Grid.Row="1"
                   HorizontalAlignment="Stretch"
                   AutoGenerateColumns="False"
                   IsReadOnly="True"
                   SelectedItem="{Binding ItemsExB}"
                   ItemsSource="{Binding Expensesadvances}">
                <DataGrid.InputBindings>
                    <!--  Double click on any row  -->
                    <MouseBinding
                       Command="{Binding EditExpenseCommand}"
                       CommandParameter="{Binding ElementName=ListExpenseBook, Path=SelectedItem}"
                       Gesture="LeftDoubleClick" />
                </DataGrid.InputBindings>

                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Date}" Header="Date" />
                    <DataGridTextColumn Binding="{Binding Name}" Header="Name" />
                    <DataGridTextColumn Binding="{Binding Amount}" Header="Amount" />
                    <DataGridTextColumn Binding="{Binding Recurring}" Header="Recurring" />
                    <DataGridTextColumn Binding="{Binding Category}" Header="Category" />
                    <DataGridTextColumn Binding="{Binding BudgetExp}" Header="Budget" />
                    <DataGridTextColumn Binding="{Binding Description}" Header="Description" />
                    <DataGridTemplateColumn CanUserResize="False" Header="Commands">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button
                                           Margin="0 0 5 0" Width="50" IsEnabled="True"
                                           Style="{StaticResource MaterialDesignRaisedButton}"
                                           ToolTip="Resource name: MaterialDesignRaisedButton"
                                           Background="#31B720" BorderBrush="#FF514D4D"
                                           Command="{Binding DataContext.EditExpenseCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" 
                                           CommandParameter ="{Binding ElementName=ListExpenseBook, Path=SelectedItem}">
                                        <materialDesign:PackIcon Kind="pencil" Foreground="White"/>
                                    </Button>
                                    <Button
                                           Width="50"
                                           IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                           Style="{StaticResource MaterialDesignRaisedButton}"
                                           ToolTip="Resource name: MaterialDesignRaisedButton"
                                           Background="IndianRed" BorderBrush="#FF514D4D"
                                           Command="{Binding DataContext.DeleteExpenseCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" 
                                           CommandParameter="{Binding}">
                                        <materialDesign:PackIcon Kind="TrashCanOutline" Foreground="White"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <DataGrid 
                   Visibility="{Binding IsButtonRecover, Converter={StaticResource BoolToVisibilityConverter}}"
                   Margin="15,0,15,15"
                   Name="ListReocver"
                   Grid.Row="1"
                   HorizontalAlignment="Stretch"
                   AutoGenerateColumns="False"
                   IsReadOnly="True"
                   SelectedItem="{Binding ItemsExB}"
                   ItemsSource="{Binding Expensesadvances}">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Date}" Header="Date" />
                    <DataGridTextColumn Binding="{Binding Name}" Header="Name" />
                    <DataGridTextColumn Binding="{Binding Amount}" Header="Amount" />
                    <DataGridTextColumn Binding="{Binding Recurring}" Header="Recurring" />
                    <DataGridTextColumn Binding="{Binding Category}" Header="Category" />
                    <DataGridTextColumn Binding="{Binding BudgetExp}" Header="Budget" />
                    <DataGridTextColumn Binding="{Binding Description}" Header="Description" />
                    <DataGridTemplateColumn CanUserResize="False" Header="Commands">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button
                                       Margin="0 0 5 0" Width="50" FontSize="15"
                                       IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                       Style="{StaticResource MaterialDesignRaisedButton}"
                                       ToolTip="Resource name: MaterialDesignRaisedButton"
                                       BorderBrush="#FF514D4D" Foreground="White"
                                       Command="{Binding DataContext.RecoverExpenseCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" 
                                       CommandParameter="{Binding}">
                                        <materialDesign:PackIcon Kind="Reload" Foreground="White"/>
                                    </Button>
                                    <Button
                                       Width="50"
                                       IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                       Style="{StaticResource MaterialDesignRaisedButton}"
                                       ToolTip="Resource name: MaterialDesignRaisedButton"
                                       Background="IndianRed" BorderBrush="#FF514D4D"
                                       Command="{Binding DataContext.RemoveExpenseCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" 
                                       CommandParameter="{Binding}">
                                        <materialDesign:PackIcon Kind="TrashCanOutline" Foreground="White"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

    </Grid>
</UserControl>
