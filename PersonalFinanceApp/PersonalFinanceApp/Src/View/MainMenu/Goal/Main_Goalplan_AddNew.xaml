<UserControl x:Class="PersonalFinanceApp.Src.View.UC_Main_Goalplan_Adding"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PersonalFinanceApp.Src.View"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="500" d:DesignWidth="400">
    <!--color done-->
    <Border Background="{DynamicResource CommonGridBackground}" Height="500" 
            Width="400" 
            CornerRadius="30">
        <Grid >
            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="FontFamily" Value="Sans Serif Collection"/>
                    <Setter Property="Foreground" Value="{DynamicResource CommonText}"/>
                    <Setter Property="FontWeight" Value="Regular"/>
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <!--title-->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Text="Adding new goal"
                           Grid.Row="0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="25"
                           Foreground="{DynamicResource CommonText}"
                           FontWeight="Bold"
                           Margin="0,5,0,0" TextAlignment="Center"></TextBlock>

                <TextBlock Text="Please fill in the form below"
                           Grid.Row="1"
                           Opacity="0.6"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Center"/>
            </Grid>

            <!--Goal name-->
            <Grid Grid.Row="1">
                <TextBox
                    Text="{Binding NameGoal}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Margin="10,0,0,0"       
                    FontSize="14"
                    materialDesign:HintAssist.Hint="Goal name"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                    materialDesign:HintAssist.Foreground="{DynamicResource CommonText}"
                    CaretBrush="{DynamicResource CommonText}"
                    SelectionBrush="{DynamicResource CommonText}"
                    materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource Underline}" 
                    Foreground="{DynamicResource CommonText}"
                    Height="40" 
                    Width="380" />
            </Grid>

            <!--Target amount-->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                         FontSize="14"
                    materialDesign:HintAssist.Hint="Target amount (VND)"
                    CaretBrush="{DynamicResource CommonText}"
                    SelectionBrush="{DynamicResource CommonText}"
                    materialDesign:HintAssist.Foreground="{DynamicResource CommonText}"
                    materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource Underline}" 
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" Height="40" 
                    Width="180" Foreground="{DynamicResource CommonText}"/>

                <TextBox Grid.Column="0"
                    VerticalAlignment="Center"
                         FontSize="14"
                    HorizontalAlignment="Center"
                    materialDesign:HintAssist.Hint="Category"
                    materialDesign:HintAssist.Foreground="{DynamicResource CommonText}"
                         CaretBrush="{DynamicResource CommonText}"
                    SelectionBrush="{DynamicResource CommonText}"
                    materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource Underline}" 
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" Height="40" 
                    Width="180" Foreground="{DynamicResource CommonText}"/>
            </Grid>

            <!--Monthly Target amount-->
            <Grid Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="13*"/>
                </Grid.RowDefinitions>
                <TextBox
                    Text="{Binding ResourceGoal}"
                    AcceptsReturn="True"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Center"
                    FontSize="14"
                    TextAlignment="Center"
                    materialDesign:HintAssist.Hint="Description"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    Margin="0,10,0,10"
                    materialDesign:HintAssist.Foreground="{DynamicResource CommonText}"
                    CaretBrush="{DynamicResource CommonText}"
                    SelectionBrush="{DynamicResource CommonText}"
                    materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource Underline}" 
                    Width="380" Foreground="{DynamicResource CommonText}" Grid.RowSpan="2"/>
            </Grid>

            <!--Start date - end date-->
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <DatePicker FontSize="14"
                                Width="175"
                                Height="40" 
                                materialDesign:HintAssist.Hint="Start date"
                                materialDesign:TextFieldAssist.HasClearButton="True"
                                Style="{StaticResource MaterialDesignFloatingHintDatePicker}" 
                                materialDesign:HintAssist.Foreground="{DynamicResource CommonText}"
                                materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource Underline}" 
                                Foreground="{DynamicResource CommonText}"
                                HorizontalAlignment="Left"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"/>
                </Grid>
                <Grid Grid.Column="1">
                    <DatePicker FontSize="14"
                    Width="178"
                    Height="40" 
                    materialDesign:HintAssist.Hint="End date"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    Style="{StaticResource MaterialDesignFloatingHintDatePicker}" 
                    materialDesign:HintAssist.Foreground="{DynamicResource CommonText}"
                    materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource Underline}" 
                        Foreground="{DynamicResource CommonText}"
                    HorizontalAlignment="Left"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"/>
                </Grid>
            </Grid>

            <!--cancel - confirm -->
            <Grid Grid.Row="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" CornerRadius="30" Height="50"
                        Width="150"
                        Background="#FFC8386C" >
                    <Button Command="{Binding CancelNewGoalCommand}">
                        <TextBlock Text="Cancel" Foreground="White"
                                   VerticalAlignment="Center"
                                   Opacity="1"
                                   HorizontalAlignment="Center"
                                   FontSize="16"></TextBlock>
                        <Button.Resources>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"></Setter>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border CornerRadius="30"
                                                Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Stretch"
                                                              VerticalAlignment="Stretch"></ContentPresenter>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="true">
                                        <Setter Property="Cursor" Value="Hand"></Setter>
                                        <Setter Property="Background" Value="Red"></Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Border>

                <!-- confirm button -->
                <Border Grid.Column="1" CornerRadius="30" Height="50"
                        Width="150"
                        Background="#FF61D2BE" >
                    <Button Command="{Binding ConfirmNewGoalCommand}">
                        <TextBlock Text="Confirm" Foreground="Black"
                                   Opacity="0.8"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   FontSize="16"></TextBlock>
                        <Button.Resources>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"></Setter>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border CornerRadius="30"
                                                Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Stretch"
                                                              VerticalAlignment="Stretch"></ContentPresenter>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="true">
                                        <Setter Property="Cursor" Value="Hand"></Setter>
                                        <Setter Property="Background" Value="#FF6DF096"></Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
