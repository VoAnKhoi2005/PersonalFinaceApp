<UserControl x:Class="PersonalFinanceApp.Src.View.UC_Goalplan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PersonalFinanceApp.Src.View"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:command="clr-namespace:PersonalFinanceApp.ViewModel.Command"
             d:DesignHeight="720" d:DesignWidth="942">
    <Grid>
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Sans Serif Collection"/>
                <Setter Property="Foreground" Value="#E5CBBFBF"/>
                <Setter Property="FontWeight" Value="Regular"/>
            </Style>
            <Style TargetType="Button">
                <Setter Property="Background" Value="Transparent"></Setter>
                <Setter Property="Foreground" Value="#E5CBBFBF"></Setter>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="30"
                                    Background="{TemplateBinding Background}"
                                    >
                                <ContentPresenter HorizontalAlignment="Stretch"
                                                  VerticalAlignment="Stretch"></ContentPresenter>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="true">
                        <Setter Property="Cursor" Value="Hand"></Setter>
                        <Setter Property="Background" Value="#265B70" ></Setter>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Resources>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="6*"></RowDefinition>
                <RowDefinition Height="9*"></RowDefinition>
                <RowDefinition Height="65*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="421*"></ColumnDefinition>
                    <ColumnDefinition Width="50*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="48*"></RowDefinition>
                        <RowDefinition Height="19*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Goal plan" 
                               FontSize="28" 
                               FontWeight="Bold"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Bottom" Margin="25,-10,0,0" 
                               Height="55" Width="126"
                               Grid.Row="0"
                               ></TextBlock>
                    <TextBlock Text="Create financial goals and manage your savings" 
                               FontSize="14"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left" Margin="26,0,0,0" 
                               Height="37" Width="303"
                               Grid.Row="1"
                               ></TextBlock>
                </Grid>

                <!--user-->
                <Button Width="35" Height="35" Grid.Column="1">
                    <Border>
                        <materialDesign:PackIcon 
                                                    Kind="AccountBadge"
                                                    Width="30" Height="30"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                                         />
                    </Border>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"></Setter>
                            <Setter Property="Foreground" Value="#E5CBBFBF"></Setter>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="30"
                                            Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Stretch"
                                                  VerticalAlignment="Stretch" ></ContentPresenter>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="true">
                                    <Setter Property="Cursor" Value="Hand"></Setter>
                                    <Setter Property="Foreground"  Value="#265B70" ></Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="0.75*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <!--Total target amount-->
                <Grid Grid.Column="0">
                    <Border CornerRadius="30"
                            Margin="15,15,7.5,0"
                            Background="#053B50">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.65*"></RowDefinition>
                                <RowDefinition  Height="0.35*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.4*"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Kind="CashMultiple"
                                                     Foreground="#E5CBBFBF"
                                                     Height="28"
                                                     Width="28"
                                                     HorizontalAlignment="Right"
                                                     VerticalAlignment="Center"
                                                     Grid.Column="0"/>

                                <!--Binding money here-->
                                <TextBlock Text="xxx"
                                           Grid.Column="1"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                    ></TextBlock>
                            </Grid>

                            <TextBlock Text="Total target amount"
                                       FontSize="12"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Bottom"
                                       Grid.Row="1"></TextBlock>



                        </Grid>
                    </Border>
                </Grid>

                <!--Left to save-->

                <Grid Grid.Column="1">
                    <Border CornerRadius="30"
                            Margin="15,15,7.5,0"
                            Background="#053B50">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.65*"></RowDefinition>
                                <RowDefinition  Height="0.35*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.4*"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Kind="HandCoin" 
                                                     Foreground="#E5CBBFBF"
                                                     Height="28"
                                                     Width="28"
                                                     HorizontalAlignment="Right"
                                                     VerticalAlignment="Center"
                                                     Grid.Column="0"/>

                                <!--Binding money here-->
                                <TextBlock Text="xxx"
                                           Grid.Column="1"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                    ></TextBlock>
                            </Grid>

                            <TextBlock Text="Left to save"
                                       FontSize="12"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Bottom"
                                       Grid.Row="1"></TextBlock>



                        </Grid>
                    </Border>
                </Grid>

                <!--Monthly savings target-->
                <Grid Grid.Column="2">
                    <Border CornerRadius="30"
                            Margin="15,15,7.5,0"
                            Background="#053B50">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.65*"></RowDefinition>
                                <RowDefinition  Height="0.35*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.4*"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Kind="BullseyeArrow" 
                                                     Foreground="#E5CBBFBF"
                                                     Height="28"
                                                     Width="28"
                                                     HorizontalAlignment="Right"
                                                     VerticalAlignment="Center"
                                                     Grid.Column="0"/>

                                <!--Binding money here-->
                                <TextBlock Text="xxx"
                                           Grid.Column="1"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                    ></TextBlock>
                            </Grid>

                            <TextBlock Text="Monthly savings target"
                                       FontSize="12"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Bottom"
                                       Grid.Row="1"></TextBlock>



                        </Grid>
                    </Border>
                </Grid>

                <!--Save so far-->
                <Grid Grid.Column="3">
                    <Border CornerRadius="30"
                            Margin="15,15,7.5,0"
                            Background="#053B50">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.65*"></RowDefinition>
                                <RowDefinition  Height="0.35*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.4*"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Kind="CreditCardFast"
                                                     Foreground="#E5CBBFBF"
                                                     Height="28"
                                                     Width="28"
                                                     HorizontalAlignment="Right"
                                                     VerticalAlignment="Center"
                                                     Grid.Column="0"/>

                                <!--Binding money here-->
                                <TextBlock Text="xxx"
                                           Grid.Column="1"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                    ></TextBlock>
                            </Grid>

                            <TextBlock Text="Save so far"
                                       FontSize="12"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Bottom"
                                       Grid.Row="1"
                                       ></TextBlock>



                        </Grid>
                    </Border>
                </Grid>

                <!--add new-->

                <Border CornerRadius="25"
                        Width="100"
                        Height="60"
                                        Background="#053B50"
                                                    Grid.Column="5">
                    <Button Command="{Binding AddNewGoalCommand}">
                        <Grid>
                            <TextBlock Text="new goal"

                                               FontSize="12"
                                               Margin="0,0,10,0"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Right"
                                               FontWeight="Normal"
                                               Foreground="#E5CBBFBF"></TextBlock>
                            <materialDesign:PackIcon Kind="PlusCircle" 
                                                                     Foreground="#E5CBBFBF"
                                                                    Height="25"
                                                                    Width="25"
                                                                    HorizontalAlignment="Left"
                                                                    VerticalAlignment="Center"
                                                                 Margin="5,0,0,0"/>
                        </Grid>
                    </Button>
                </Border>
            </Grid>
            <!--goal plan main looking-->
        </Grid>
    </Grid>
</UserControl>
