        <DockPanel Grid.Column="0" Background="#003E57">
            <Border Height="60" VerticalAlignment="Top"
                    DockPanel.Dock="Top">
                <Grid>
                    <Image Height="44" Width="44"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="20,0,0,0"
                        Source="/Resources/img/Logo_UIT_updated.svg.png" />
                    <TextBlock Text="PFA" FontSize="40"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="50,0,0,0"
                               FontWeight="Bold"></TextBlock>
                    <TextBlock ></TextBlock>

                </Grid>
            </Border>
            
            <!--Dashboard-->
            <Button Height="60" VerticalAlignment="top" 
                    DockPanel.Dock="Top"
                    IsHitTestVisible="True">
                <Grid VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Height="60" Width="210"
                        Background="Transparent">
                    <TextBlock ></TextBlock>

                    <materialDesign:PackIcon Foreground="#E5CBBFBF"
                                                Kind="Signal"
                                                Width="30"
                                                Height="30"
                                                VerticalAlignment="Center" Margin="12,0,0,0" />
                    <TextBlock Text="Dashboard" FontSize="18"
                                 Foreground="#E5CBBFBF"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center"
                                  Margin="0,0,41,0" FontWeight="Normal"/>

                </Grid>
            </Button>
            <!--Expense book-->
            <Button Height="60" VerticalAlignment="top"
                    DockPanel.Dock="Top"
                    IsHitTestVisible="True">
                <Grid VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Height="60" Width="210"
                        Background="Transparent">
                    <TextBlock ></TextBlock>

                    <TextBlock Text="Expense book"
                                       FontSize="18"
                                       Foreground="#E5CBBFBF"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Margin="0,0,20,0" FontWeight="Normal"/>

                    <materialDesign:PackIcon Kind="BookOpenPageVariant" Foreground="#E5CBBFBF"
                                                 Width="30"
                                                 Height="30"
                                                 VerticalAlignment="Center"
                                                 Margin="13,0,0,0" />

                </Grid>
            </Button>
            <!--Goal plan-->
            <Button Height="60" VerticalAlignment="top"
                    DockPanel.Dock="Top"
                    IsHitTestVisible="True">
                <Grid VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Height="60" Width="210"
                        Background="Transparent">
                    <TextBlock ></TextBlock>

                    <materialDesign:PackIcon Kind="FlagCheckered"
                     Foreground="#E5CBBFBF"
                     Width="30"
                     Height="30"
                     VerticalAlignment="Center"
                     Margin="10,0,0,0" />
                    <TextBlock Text="Goal plan" 
                                FontSize="18"
                                Foreground="#E5CBBFBF"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 Margin="15,0,0,0" FontWeight="Normal"></TextBlock>

                </Grid>
            </Button>
            <!--Summary-->
            <Button Height="60" VerticalAlignment="top"
                    DockPanel.Dock="Top"
                    IsHitTestVisible="True">
                <Grid VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Height="60" Width="210"
                        Background="Transparent">
                    <TextBlock ></TextBlock>
                    <materialDesign:PackIcon Kind="DatabaseEye"
                     Foreground="#E5CBBFBF"
                     Width="30"
                     Height="30"
                     VerticalAlignment="Center"
                     Margin="11,0,0,0" />

                    <TextBlock Text="Summary" FontSize="18"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                    FontWeight="Normal"
                                     Foreground="#E5CBBFBF"
                                Margin="18,0,0,0"/>

                </Grid>
            </Button>
            <!--Option-->
            <Button Height="60" VerticalAlignment="Bottom"
                    DockPanel.Dock="Bottom">
                <Grid VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Height="60" Width="210"
                        Background="Transparent">
                    <TextBlock ></TextBlock>

                    <materialDesign:PackIcon Kind="CogBox"
                     Foreground="#E5CBBFBF"
                     Width="34"
                     Height="34"
                     VerticalAlignment="Center"
                     Margin="12,0,0,0" />

                    <TextBlock Text="Setting" FontSize="18"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                                   FontWeight="Normal"
                                    Foreground="#E5CBBFBF"
                               Margin="0,0,73,0"/>

                </Grid>
            </Button>
        </DockPanel>
        
        
        
