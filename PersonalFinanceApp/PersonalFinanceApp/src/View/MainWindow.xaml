<Window x:Class="PersonalFinanceApp.View.MainWindow"

        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:PersonalFinanceApp.Src.View"
        xmlns:viewModels="clr-namespace:PersonalFinanceApp.ViewModel.MainMenu"
        mc:Ignorable="d"

        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:custom="clr-namespace:PersonalFinanceApp.ViewModel.Modal"
        Background="#0D2129"
        ResizeMode="CanResizeWithGrip"
        MinHeight="720" MinWidth="1152"
        Height="720" Width="1152"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Sans Serif Collection" />
                <Setter Property="Foreground" Value="#E5CBBFBF" />
                <Setter Property="FontWeight" Value="Regular" />
            </Style>
            <Style TargetType="Button">
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="true">
                        <Setter Property="Cursor" Value="Hand"></Setter>
                    </Trigger>
                    <Trigger Property="IsFocused" Value="true">
                        <Setter Property="Background" Value="#0D2129"></Setter>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Resources>
        <!-- background-->


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="210"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <custom:Modal Grid.ColumnSpan="2"
                      Grid.RowSpan="1"
                      IsOpen="False"
                      Panel.ZIndex="100">

            
        </custom:Modal>

        <DockPanel Grid.Column="0" Background="#003E57">
            <!--Title-->
            <Border Height="60" VerticalAlignment="Top"
                    DockPanel.Dock="Top">
                <Grid>
                    <Image Height="44" Width="44"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="20,0,0,0"
                           Source="/Resources/img/Logo_UIT_updated.svg.png" />
                    <TextBlock Text="PFA" FontSize="40"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="50,0,0,0"
                               FontWeight="Bold">
                    </TextBlock>
                    <TextBlock></TextBlock>

                </Grid>
            </Border>
            <!--Dashboard-->
            <Button Height="60" VerticalAlignment="top"
                    DockPanel.Dock="Top"
                    IsHitTestVisible="True"
                    Command="{Binding DashBoardNavigateCommand}">
                <Button.Template>
                    <ControlTemplate>
                        <Grid VerticalAlignment="Center"
                              HorizontalAlignment="Center"
                              Height="60" Width="210"
                              Background="Transparent">
                            <TextBlock></TextBlock>

                            <materialDesign:PackIcon Foreground="#E5CBBFBF"
                                                     Kind="Signal"
                                                     Width="30"
                                                     Height="30"
                                                     VerticalAlignment="Center" Margin="12,0,0,0" />
                            <TextBlock Text="Dashboard" FontSize="18"
                                       Foreground="#E5CBBFBF"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       Margin="0,0,41,0" FontWeight="Normal" />

                        </Grid>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Cursor" Value="Hand"></Setter>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="true">
                                <Setter Property="Foreground" Value="#0D2129"></Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <!--Expense book-->
            <Button Height="60" VerticalAlignment="top"
                    Background="Transparent"
                    DockPanel.Dock="Top"
                    IsHitTestVisible="True">
                <Button.Template>
                    <ControlTemplate>
                        <Grid VerticalAlignment="Center"
                              HorizontalAlignment="Center"
                              Height="60" Width="200">
                            <TextBlock Text="Expense book"
                                       FontSize="18"
                                       Foreground="#E5CBBFBF"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       Margin="0,0,13,0" FontWeight="Normal" />

                            <materialDesign:PackIcon Kind="BookOpenPageVariant" Foreground="#E5CBBFBF"
                                                     Width="30"
                                                     Height="30"
                                                     VerticalAlignment="Center"
                                                     Margin="8,0,0,0" />
                            <TextBlock></TextBlock>

                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <!--Goal plan-->
            <Button Height="60" VerticalAlignment="top"
                    Background="Transparent"
                    DockPanel.Dock="Top"
                    IsHitTestVisible="True"
                    Command="{Binding GoalplanNavigateCommand}">
                <Button.Template>
                    <ControlTemplate>
                        <Grid VerticalAlignment="Center"
                              HorizontalAlignment="Center"
                              Height="60" Width="210">
                            <materialDesign:PackIcon Kind="FlagCheckered"
                                                     Foreground="#E5CBBFBF"
                                                     Width="30"
                                                     Height="30"
                                                     VerticalAlignment="Center"
                                                     Margin="10,0,0,0" />
                            <TextBlock Text="Goal plan"
                                       FontSize="18"
                                       Foreground="#E5CBBFBF"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       Margin="0,0,53,0" FontWeight="Normal">
                            </TextBlock>
                            <TextBlock></TextBlock>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <!--Summary-->
            <Button Height="60" VerticalAlignment="top"
                    Background="Transparent"
                    DockPanel.Dock="Top"
                    IsHitTestVisible="True"
                    Command="{Binding SummaryNavigateCommand}">
                <Button.Template>
                    <ControlTemplate>
                        <Grid VerticalAlignment="Center"
                              HorizontalAlignment="Center"
                              Height="60" Width="210">
                            <materialDesign:PackIcon Kind="DatabaseEye"
                                                     Foreground="#E5CBBFBF"
                                                     Width="30"
                                                     Height="30"
                                                     VerticalAlignment="Center"
                                                     Margin="11,0,0,0" />

                            <TextBlock Text="Summary" FontSize="18"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="Normal"
                                       Foreground="#E5CBBFBF"
                                       Margin="27,0,0,0" />
                            <TextBlock></TextBlock>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <!--Option-->
            <Button Height="60" VerticalAlignment="Bottom"
                    Background="Transparent"
                    DockPanel.Dock="Bottom">
                <Button.Template>
                    <ControlTemplate>
                        <Grid VerticalAlignment="Center"
                              HorizontalAlignment="Center"
                              Height="60" Width="210">
                            <materialDesign:PackIcon Kind="CogBox"
                                                     Foreground="#E5CBBFBF"
                                                     Width="34"
                                                     Height="34"
                                                     VerticalAlignment="Center"
                                                     Margin="12,0,0,0" />

                            <TextBlock Text="Setting" FontSize="18"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       FontWeight="Normal"
                                       Foreground="#E5CBBFBF"
                                       Margin="0,0,73,0" />
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </DockPanel>

        <ContentControl Grid.Column="1" Content="{Binding CurrentViewModel}">
            <ContentControl.Resources>

                <DataTemplate DataType="{x:Type viewModels:DashboardViewModel}">
                    <views:UC_Dashboard />
                </DataTemplate>

                <DataTemplate DataType="{x:Type viewModels:GoalplanViewModel}">
                    <views:UC_Goalplan />
                </DataTemplate>

                <DataTemplate DataType="{x:Type viewModels:SummaryViewModel}">
                    <views:UC_Summary />
                </DataTemplate>

            </ContentControl.Resources>
        </ContentControl>
    </Grid>
</Window>