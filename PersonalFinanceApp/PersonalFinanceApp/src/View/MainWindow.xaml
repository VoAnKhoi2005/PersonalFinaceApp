        <DockPanel Grid.Column="0" Background="#003E57">
            <Border Height="60" VerticalAlignment="Top"
                    DockPanel.Dock="Top">
                <Grid>
                    <Image Height="44" Width="44"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="20,0,0,0"
                        Source="/Resources/img/Logo_UIT_updated.svg.png" />
                    <TextBlock Text="PFA" FontSize="40"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="50,0,0,0"
                               FontWeight="Bold"></TextBlock>
                </Grid>
            </Border>
            
            <!--Dashboard-->
            <Button Height="60" VerticalAlignment="top"
                    Background="Transparent"
                    DockPanel.Dock="Top">
                <Button.Template>
                    <ControlTemplate>
                        <Grid VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Height="60" Width="210">
                            <materialDesign:PackIcon Foreground="#E5CBBFBF"
                             Kind="Signal"
                             Width="30"
                             Height="30"
                             VerticalAlignment="Center" Margin="12,0,0,0" />
                            <TextBlock Text="Dashboard" FontSize="18"
                                       Foreground="#E5CBBFBF"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Margin="0,0,41,0" FontWeight="Normal"/>
                        </Grid> 
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <!--Expense book-->
            <Button Height="60" VerticalAlignment="top"
                    Background="Transparent"
                    DockPanel.Dock="Top">
                <Button.Template>
                    <ControlTemplate>
                        <Grid VerticalAlignment="Center"
                          HorizontalAlignment="Center"
                          Height="60" Width="200">
                            <TextBlock Text="Expense book"
                                       FontSize="18"
                                       Foreground="#E5CBBFBF"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Margin="0,0,13,0" FontWeight="Normal"/>

                            <materialDesign:PackIcon Kind="BookOpenPageVariant" Foreground="#E5CBBFBF"
                                                 Width="30"
                                                 Height="30"
                                                 VerticalAlignment="Center"
                                                 Margin="8,0,0,0" />

                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <!--Goal plan-->
            <Button Height="60" VerticalAlignment="top"
                    Background="Transparent"
                    DockPanel.Dock="Top">
                <Button.Template>
                    <ControlTemplate>
                        <Grid VerticalAlignment="Center"
                          HorizontalAlignment="Center"
                          Height="60" Width="210">
                            <materialDesign:PackIcon Kind="FlagCheckered"
                                                 Foreground="#E5CBBFBF"
                                                 Width="30"
                                                 Height="30"
                                                 VerticalAlignment="Center"
                                                 Margin="10,0,0,0" />
                            <TextBlock Text="Goal plan" 
                                       FontSize="18"
                                       Foreground="#E5CBBFBF"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Margin="0,0,53,0" FontWeight="Normal"/>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <!--Summary-->
            <Button Height="60" VerticalAlignment="top"
                    Background="Transparent"
                    DockPanel.Dock="Top">
                <Button.Template>
                    <ControlTemplate>
                        <Grid VerticalAlignment="Center"
                          HorizontalAlignment="Center"
                          Height="60" Width="210">
                            <materialDesign:PackIcon Kind="DatabaseEye"
                                                 Foreground="#E5CBBFBF"
                                                 Width="30"
                                                 Height="30"
                                                 VerticalAlignment="Center"
                                                 Margin="11,0,0,0" />

                            <TextBlock Text="Summary" FontSize="18"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                       FontWeight="Normal"
                                        Foreground="#E5CBBFBF"
                                       
                                   Margin="27,0,0,0"/>


                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <!--Option-->
            <Button Height="60" VerticalAlignment="Bottom"
                    Background="Transparent"
                    DockPanel.Dock="Bottom">
                <Button.Template>
                    <ControlTemplate>
                        <Grid VerticalAlignment="Center"
                          HorizontalAlignment="Center"
                          Height="60" Width="210">
                            <materialDesign:PackIcon Kind="CogBox"
                                                 Foreground="#E5CBBFBF"
                                                 Width="34"
                                                 Height="34"
                                                 VerticalAlignment="Center"
                                                 Margin="12,0,0,0" />

                            <TextBlock Text="Setting" FontSize="18"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                       FontWeight="Normal"
                                        Foreground="#E5CBBFBF"
                                   Margin="0,0,73,0"/>

                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </DockPanel>
        <ContentControl Content="{Binding CurrentViewModel}">
            <ContentControl.Resources>

                <DataTemplate DataType="{x:Type viewModels:DashboardViewModel}">
                    <views:UC_Dashboard />
                </DataTemplate>

                <DataTemplate DataType="{x:Type viewModels:GoalplanViewModel}">
                    <views:UC_Goalplan />
                </DataTemplate>

                <DataTemplate DataType="{x:Type viewModels:SummaryViewModel}">
                    <views:UC_Summary />
                </DataTemplate>

            </ContentControl.Resources>
        </ContentControl>

        <!--<views:UC_Summary Grid.Column="1"></views:UC_Summary>-->
